export PS1='{{shell_ps1}}'
export PATH=$PATH:$HOME/bin
export HISTSIZE=1000000
export HISTFILESIZE=1000000

{% if ansible_os_family == 'Darwin' %}
{% set ls='gls' %}
if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi
test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"
{% else %}
{% set ls='ls' %}
{% endif %}

alias l='{{ls}} -alF --group-directories-first --color=always'
alias ll='{{ls}} -lF --group-directories-first --color=always'

for f in $(find .bash_completion.d/ -maxdepth 1 -type f); do
  . $f
done

{% for c in ['alpine','centos','ubuntu'] %}
alias .{{c}}='docker run --rm -ti -h temp-{{c}} -v $(dirname $SSH_AUTH_SOCK) -e SSH_AUTH_SOCK=$SSH_AUTH_SOCK -v $(pwd):/mnt/$(basename $(pwd)) {{c}} "$@"'
{% endfor %}
